!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Language School
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    = react_component 'Navbar', {isSignedIn: user_signed_in?}, :nav
    .container.main-container
      - if notice.present?
        %p.notice= notice
      - if alert.present?
        %p.alert= alert
      =react_router 'Router', 'HashLocation', {}, {'data-user-id': user_signed_in? ? current_user.id : ""}
    = react_component 'Footer', {}, :footer
